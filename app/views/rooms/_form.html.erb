<%= form_for @room do |form| %>
<div id="input_field_for_rooms">
  <div class="input-group input-group-sm mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text text-muted">Name of Room: </span>
      <%= form.text_field :name, class: 'input_field_room'%></br>
      <span class="input-group-text text-muted">Would you like your room be secured?</span>
      <%= form.check_box :security %></br>
      <%= form.submit "Save", class: 'btn btn-primary btn-block' %>
	</div>
  </div>
</div>
<% end %>