
<h1>Room.show</h1>
<h4><%= @room.name %></h4>

<% @room_message.each do |message| %>
  <p><%= message.message %>
  	<span> - User: <% @creator_of_message.each do |creator| 
  							if creator.id == message.user_id %>
  							  <%= creator.username %>
  						    <% end %>
  					  <% end %>								
  	</span>
  </p>
<% end %>

<%= render 'form' %>

</br>
<hr>
  <p><%= @current_room %></p>
<hr>
<%= link_to "Close the room", @room, method: :delete %></br>
