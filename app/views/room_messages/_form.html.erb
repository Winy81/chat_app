<%= form_for @new_room_message, remote: true do |form| %>
  <div id="input_field_for_message">
    <div class="input-group input-group-sm mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text text-muted" >Message: </span>
        <%= form.text_field :message, id:'input_message', class: 'input_field_message'  %>
        <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
      </div>
    </div>
    <%= form.hidden_field :room_id, :value => @current_room_id %>
    <%= form.hidden_field :user_id, :value => current_user.id %>


<% end %>
</div>
</br>
</br>

<script>
    var input =  document.getElementById("input_message");
    input.focus();
    input.select();
</script>